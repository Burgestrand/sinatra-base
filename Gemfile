source :rubygems

group :web do
  # Web framework
  gem 'sinatra'
  gem 'sinatra-contrib', require: false

  # Templating language
  gem 'slim'

  # Assets
  gem 'sprockets'
  gem 'compass'
  gem 'sprockets-sass'
  gem 'bootstrap-sass'
  gem 'coffee-script'
end

group :web_development do
  gem 'pry'

  # Running
  gem 'foreman'
end
